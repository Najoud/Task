<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TabLayout.LoginFragment">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/aladarbi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/img_aladarbi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/nameInp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150sp"
            android:layout_marginLeft="50dp"
            android:hint="                             الهاتف"
            android:inputType="phone"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="157sp"
            android:layout_marginLeft="330dp"
            android:src="@drawable/call"/>
        <com.hbb20.CountryCodePicker
            android:id="@+id/countryCode_picker"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginTop="155sp"
            app:ccp_areaCodeDetectedCountry="true"
            app:ccp_autoDetectCountry="true" />

        <EditText
            android:id="@+id/pwdInp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="220sp"
            android:layout_marginBottom="20sp"
            android:hint="                                           كلمة المرور"
            android:inputType="textPassword"
            android:padding="10dp"
            android:shadowRadius="@android:integer/config_longAnimTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameInp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="230sp"
            android:layout_marginLeft="330dp"
            android:src="@drawable/louck"/>

        <Button
            android:id="@+id/Log"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:text="تسجيل"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pwdInp" />


        <TextView
            android:id="@+id/changepass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="280sp"
            android:layout_marginBottom="75dp"
            android:text="هل نسيت كلمة المرور ؟"
            android:textColor="@color/gray"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </FrameLayout>
</layout>